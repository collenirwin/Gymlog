@model Exercise
@{
    ViewData["Title"] = "Add Exercise";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <hr />
            <div class="form-group">
                <label asp-for="ExerciseName"></label>
                <input asp-for="ExerciseName" class="form-control" placeholder="Example: Bench Press" />
                <span asp-validation-for="ExerciseName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExerciseMuscle"></label>
                <input asp-for="ExerciseMuscle" class="form-control" placeholder="Example: Chest"/>
                <span asp-validation-for="ExerciseMuscle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-default">Add Exercise</button>
            </div>
                <div class="form-group">
                    <p>
                        <a asp-action="Exercises" asp-controller="Saved" asp-route-returnurl="@ViewData["ReturnUrl"]">View saved exercises</a>
                    </p>
                </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

