@model Workout
@{
    ViewData["Title"] = Model.Name;
}

<h2>@Model.Name</h2>
<p>
    <a asp-area="" asp-controller="Saved" asp-action="Workouts">View Saved Workouts</a>
</p>
<form method="post">
    <input type="hidden" asp-for="Id" />

    @foreach (var workoutExercise in Model.WorkoutExercises)
    {
        <h3>@workoutExercise.ExerciseName</h3>

        <table class="table">
            <thead>
                <tr>
                    <th>
                        Set
                    </th>
                    <th>
                        Reps
                    </th>
                    <th>
                        Reps Completed
                    </th>
                    <th>
                        Comments
                    </th>
                    <th>
                        Weight
                    </th>
                    <th>
                        Notes
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var set in workoutExercise.Sets)
                {
                    <tr>
                        <td>
                            @set.SetNumber
                        </td>
                        <td>
                            @set.Reps
                        </td>
                        <td>
                            <input min="0" max="9999" style="width:50px" value="@set.Reps" type="number" name="RepsCompleted" />
                        </td>
                        <td>
                            @set.Comments
                        </td>
                        <td>
                            <input maxlength="50" style="width:80px" placeholder="Weight" type="text" name="Weight" />
                        </td>
                        <td>
                            <input maxlength="500" placeholder="Notes" type="text" name="Notes" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    <input type="submit" class="btn btn-default" value="Log Workout"
               style="position: fixed; bottom: 50px; right: 50px; color:#9d9d9d; background-color:#101010;" />
</form>